<Page loaded="loaded">
  <StackLayout orientation="vertical">
    <Image src="res://logo" stretch="none" horizontalAlignment="center" />
    <TextField
      id="email_address"
      text="{{ email }}"
      hint="Email Address"
      keyboardType="email"
    />
    <TextField
      hint="Password"
      text="{{ password }}"
      secure="true"
    />

    <Button text="Sign in" tap="signIn"/>
    <Button text="Sign up for Groceries" cssClass="link" tap="register"/>
  </StackLayout>
</Page>
